# ----------------------------------------------------------------------
# Cache Policy
# ----------------------------------------------------------------------

# HTML (10 minutes)
<FilesMatch "\.(html)$">
  Header set Cache-Control "max-age=600, public"
</FilesMatch>

# Media (7 days)
<FilesMatch "\.(jpg|jpeg|gif|png|svg|webp)$">
  Header set Cache-Control "max-age=604800, public"
</FilesMatch>

